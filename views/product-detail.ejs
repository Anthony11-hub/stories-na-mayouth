<%- include('partials/header') %>
<main>
  <article>
    <section class="product">
      <div class="container">
        <div class="product-image">
          <div class="selected-image">
            <figure
              class="card-banner img-holder"
              style="--width: 400; --height: 290">
              <img
                src=""
                width="400"
                height="290"
                loading="lazy"
                alt="product Image"
                class="img-cover" />
            </figure>
          </div>
          <div class="product-image-select">
            <!-- <img
              src=""
              width="400"
              height="290"
              loading="lazy"
              alt=""
              class="img-cover"
              id="img-1" />
            <img
              src=""
