<%- include('partials/admin-header') %>
<body id="page-top">
  <div id="wrapper">
    <%- include('partials/sidebar') %>
    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">
        <!-- Topbar -->
        <%- include('partials/navbar') %>
        <div class="container-fluid">
          <!-- Page Heading -->
          <div
            class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Products Management</h1>
          </div>
          <!-- Page Heading -->
          <p class="mb-4">List of all Products</p>
          <!-- DataTales Example -->
          <div class="card shadow">
            <div class="card-header">
              <h6 class="font-weight-bold text-primary">Products DataTable</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Product Name</th>
                      <th>Category</th>
                      <th>Price</th>
                      <th>Availability</th>
                      <th>Condition</th>
                      <th>Brand</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>#</th>
                      <th>Product Name</th>
                      <th>Category</th>
                      <th>Price</th>
                      <th>Availability</th>
                      <th>Condition</th>
                      <th>Brand</th>
                      <th>Action</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <tr>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          role="dialog"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                  Product Details
                </h5>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <!-- modal content goes here -->
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal">
                  Close
                </button>
                <button type="button" class="btn btn-primary">
                  Save changes
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"></script>
      <script
        src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.5.1/axios.min.js"
        integrity="sha512-emSwuKiMyYedRwflbZB2ghzX8Cw8fmNVgZ6yQNNXXagFzFOaQmbvQ1vmDkddHjm5AITcBIZfC7k4ShQSjgPAmQ=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"></script>
      <script>
        $(document).ready(function () {
          let table = $("#dataTable").DataTable();

          fetchDataAndDisplay(table);
        });

        function fetchDataAndDisplay(table) {
          axios
            .get("http://localhost:4000/api/v1/post/")
            .then((response) => {
              const posts = response.data.data;

              // console.log(posts);

              // Clear any existing rows from the DataTable
              table.clear();

              // Iterate over the data and create rows
              posts.forEach((post, index) => {
                const postId = post._id;

                table.row.add([
                  index + 1,
                  post.productTitle,
                  post.productCategory,
                  post.productPrice,
                  post.productAvailability,
                  post.productCondition,
                  post.productBrand,
                  `<button
                    onclick="fetchSinglePost('${postId}')"
                    type="button"
                    class="btn btn-primary"
                    data-toggle="modal"
                    data-target="#exampleModal">
                    Update
                  </button>`,
                ]);
              });

              // Redraw the DataTable to display the new data
              table.draw();
            })
            .catch((error) => {
              Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Error fetching posts",
              });
            });
        }

        // ==========================================
        // ==============FETCH SINGLE DATA===========
        // ==========================================
        function fetchSinglePost(postId) {
          axios
            .get(`http://localhost:4000/api/v1/post/${postId}`)
            .then((response) => {
              const post = response.data.data;

              modal = document.querySelector(".modal");
              const modalContent = document.querySelector(".modal-body");

              modalContent.innerHTML = `
                <form id="productForm">
                  <div class="form-group">
                    <label for="name">Product Name:</label>
                    <input type="text" id="name" class="form-control" name="productTitle" value="${post.productTitle}">
                  </div>
                  <div class="form-group">
                    <label for="region">Category:</label>
                    <input type="text" id="category" class="form-control" name="productCategory" value="${post.productCategory}">
                  </div>
                  <div class="form-group">
                    <label for="tag">Description:</label>
                    <textarea class="form-control" name="productDescription" id="description" rows="3" placeholder="Enter Description...">${post.productDescription}</textarea>
                  </div>
                  <div class="form-group">
                    <label for="number">Pricing:</label>
                    <input type="number" id="price" class="form-control" name="productPrice" value="${post.productPrice}">
                  </div>
                  <div class="form-group">
                    <label for="service">Availability:</label>
                    <input type="text" id="availability" class="form-control" name="ProductAvailability" value="${post.productAvailability}">
                  </div>
                  <div class="form-group">
                    <label for="email">Condition:</label>
                    <input type="text" id="condition" class="form-control" name="productCondition" value="${post.productCondition}">
                  </div>
                  <div class="form-group">
                    <label for="status">Brand:</label>
                    <input type="text" id="brand" class="form-control" name="productBrand" value="${post.productBrand}">
                  </div>

                  <div style="margin-top: 10px">
                    <button type="submit" id="updateBtn" class="btn btn-primary">
                      Save changes
                    </button>
                    <button type="button" id="deleteBtn" class="btn btn-danger">
                      Delete Post
                    </button>
                  </div>
                </form>
                `;

              // get the form id
              const form = modal.querySelector("#productForm");

              form.addEventListener("submit", (e) => {
                e.preventDefault();

                const formData = new FormData(form);

                axios
                  .patch(
                    `http://localhost:4000/api/v1/post/${postId}`,
                    formData,
                    {
                      headers: {
                        "Content-Type": "multipart/form-data",
                      },
                    }
                  )
                  .then((response) => {
                    if (response.status === 200) {
                      Swal.fire({
                        position: "top-end",
                        icon: "success",
                        title: "Success",
                        text: "Post updated successfully!!",
                        showConfirmButton: false,
                        timer: 2000,
                      }).then((result) => {
                        location.reload();
                      });
                    } else {
                      Swal.fire({
                        icon: "error",
                        title: "Oops...",
                        text: "Failed to update post",
                      });
                    }
                  })
                  .catch((err) => {
                    Swal.fire({
                      icon: "error",
                      title: "Oops...",
                      text: "An unexpected error occured",
                    });
                  });
              });

              // get delete button
              const deleteBooking = modal.querySelector("#deleteBtn");

              deleteBooking.addEventListener("click", () => {
                if (confirm("Are you sure you want to delete this booking?")) {
                  axios
                    .delete(`http://localhost:4000/api/v1/post/${postId}`)
                    .then((response) => {
                      if (response.status === 200) {
                        Swal.fire({
                          position: "top-end",
                          icon: "success",
                          title: "Success",
                          text: "Post deleted successfully!!",
                          showConfirmButton: false,
                          timer: 2000,
                        }).then((result) => {
                          location.reload();
                        });
                        modal.style.display = "none";
                      } else {
                        Swal.fire({
                          icon: "error",
                          title: "Oops...",
                          text: "Failed to delete post",
                        });
                      }
                    })
                    .catch((err) => {
                      Swal.fire({
                        icon: "error",
                        title: "Oops...",
                        text: "An error occured while deleting post",
                      });
                    });
                }
              });
            })
            .catch((error) => {
              Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Error fetching single post",
              });
            });
        }
      </script>
      <%- include('partials/footer-2') %>
    </div>
  </div>
</body>
